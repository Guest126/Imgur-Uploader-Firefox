{

  "manifest_version": 2,
  "name": "Imgur-Uploader",
  "version": "1.2",

  "description": "Image Upload addon for firefox",

  "icons": {
    "48": "icons/favicon.png"
  },
  "permissions":[
      "storage",
      "menus",
      "activeTab",
      "notifications",
      "<all_urls>"
  ],
  "background":{
      "scripts":[
          "./build/js/background.bundle.js"
      ]
  },
  "options_ui": {
    "page": "templates/settings/options.html",
    "open_in_tab" : true
  },
  "browser_action":{
      "default_popup": "templates/popup.html"
  }

}
